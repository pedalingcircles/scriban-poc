# Copy this file to terraform.tfvars and customize

# Required variables
environment = "dev"

# Optional customizations
location     = "East US 2"
project_name = "scriban-poc"

# Security settings
enable_versioning    = true
enable_soft_delete   = true
soft_delete_retention_days = 30

# Network access (uncomment and add your IPs if needed)
# allowed_ips = [
#   "203.0.113.0/24",  # Your office IP range
#   "198.51.100.1"      # Your home IP
# ]

# Custom tags
tags = {
  Project     = "scriban-poc"
  Owner       = "DevOps Team"
  Environment = "dev"
  ManagedBy   = "terraform"
  Component   = "bootstrap"
}